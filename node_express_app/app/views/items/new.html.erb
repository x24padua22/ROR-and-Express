<%= link_to 'Log out', session_path(current_user), :confirm => 'Are you sure you want to log out?', :method => :delete %>
<h1>Add a new Stuff</h1>

<form action="/items" id="new_item" role="form" method="post">
	<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
	<div class="form-group">
		<label for="Quantity">Quantity</label>
		<select name="item[quantity]" class="form-control">
			<option value="1">1</option>
			<option value="2">2</option>
			<option value="3">3</option>
			<option value="4">4</option>
			<option value="5">5</option>
		</select>
	</div>
	<div class="form-group">
		<input type="text" name="item[name]" class="form-control">
	</div>
	<input type="submit" value="CREATE" class="btn btn-primary">
</form>
<div class="message"></div>
