<h1>Sign In</h1>

<% if flash[:error] %>
	<p><%= flash[:error] %></p>
<% end %>

<form action="/sessions" id="new_sessions" role="form" method="post">
	<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
	<div class="form-group">
		<label for="Email">Email</label>
		<input type="text" name="session[email]" class="form-control">
	</div>
	<div class="form-group">
		<label for="Password">Password</label>
		<input type="password" name="session[password]" class="form-control">
	</div>
	<input type="submit" value="Login" class="btn btn-primary">
</form>

<a href="/users/new">Register Now!</a>